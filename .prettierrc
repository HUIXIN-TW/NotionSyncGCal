{
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.py",
      "options": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all"
      }
    }
  ]
}
